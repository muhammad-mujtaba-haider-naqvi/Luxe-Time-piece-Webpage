<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Edit Product | Luxe Timepieces</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header', { isAdmin: isAdmin }) %>
  <main class="container">
    <div class="form-container">
      <h1>Edit Product</h1>
      <% if (error) { %><div class="error"><%= error %></div><% } %>
      <form method="post" action="/admin/edit/<%= product.id %>" enctype="multipart/form-data">
        <div class="form-group">
          <label>Title</label>
          <input name="title" value="<%= product.title %>" required>
        </div>
        <div class="form-group">
          <label>Price</label>
          <input name="price" type="number" step="0.01" value="<%= product.price %>" required>
        </div>
        <div class="form-group">
          <label>Description</label>
          <textarea name="description" rows="4"><%= product.description %></textarea>
        </div>
        <div class="existing-images">
          <p>Primary Image <span class="hint">(Click any image below to set as primary)</span></p>
          <div class="primary-image-container">
            <img id="current-primary" src="/<%= product.primaryImage %>" width="200">
          </div>
        </div>
        <div class="existing-images">
          <p>All Images</p>
          <div id="secondary-list">
            <div class="sec-item <%= product.primaryImage === product.primaryImage ? 'is-primary' : '' %>" data-img="<%= product.primaryImage %>">
              <img src="/<%= product.primaryImage %>" width="100">
              <div class="sec-item-actions">
                <button type="button" class="btn btn-set-primary small" data-fname="<%= product.primaryImage %>" data-id="<%= product.id %>">Set Primary</button>
                <button type="button" class="btn btn-delete-image small" data-fname="<%= product.primaryImage %>" data-id="<%= product.id %>">Delete</button>
              </div>
            </div>
            <% (product.secondaryImages || []).forEach(function(img){ %>
              <div class="sec-item" data-img="<%= img %>">
                <img src="/<%= img %>" width="100">
                <div class="sec-item-actions">
                  <button type="button" class="btn btn-set-primary small" data-fname="<%= img %>" data-id="<%= product.id %>">Set Primary</button>
                  <button type="button" class="btn btn-delete-image small" data-fname="<%= img %>" data-id="<%= product.id %>">Delete</button>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
        <div class="form-group">
          <label>Add Images</label>
          <input type="file" name="images" multiple accept="image/*">
        </div>
        <div class="form-actions">
          <button class="btn" type="submit">Save Changes</button>
        </div>
      </form>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="/js/admin.js"></script>
</body>
</html>
